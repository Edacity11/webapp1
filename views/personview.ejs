<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header') %>
    <body class="bg-dark">
      <%- include('./partials/navigation') %>

      <div class="row d-flex justify-content-center">
        <div class="col-4 pt-5">
          <div class="card bg-dark text-center">
              <div class="card-header bg-warning">
                <h4>Viewing Person</h4>
              </div>
              <div class="card-body">
                  <form>
                      <div class="mb-3">
                        <label for="name" class="form-label text-light"><b>Fullname</b></label>
                        <input type="text" class="form-control" value="<%= personView.name %>" id="name" name="name" readonly>
                      </div>
                      <div class="mb-3">
                        <label for="nationality" class="form-label text-light"><b>Nationality</b></label>
                        
                          <input type="text" class="form-control text-dark" id="nationality" name="nationality" value="<%= personView.nationality %>"  readonly>
                        
                      </div>
                      <div class="mb-3 form-check">
                          <label for="birthdate" class="col-2 col-form-label text-light">Birthdate</label>
                          <div class="col-10">
                            <input class="form-control" type="date" name="birthdate" value="<%= personView.birthdate %>" id="birthdate" readonly>
                          </div>
                      </div>
                      <div class="d-flex justify-content-end">
                          <a href="/" class="btn btn-outline-warning btn-lg">EXIT</a>
                      </div>
                  </form>
              </div>
              <div class="card-footer bg-warning text-muted">
              </div>
            </div>
        </div>
    </div>

      <%- include('./partials/footer') %>
        
    </body>
</html>